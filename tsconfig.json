{
    "extends": "eslint-config-bamboo",
    "compilerOptions": {
        "outDir": "./dist",
        "listEmittedFiles": true,
        "noImplicitAny": false,
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "@structures/*": [
                "src/lib/structures/*"
            ],
            "@typings/*": [
                "src/lib/types/*"
            ],
            "@settings/*": [
                "src/lib/settings/*"
            ],
            "@utils/*": [
                "src/lib/util/*"
            ]
        },
        "types": [
            "discord.js",
            "klasa"
        ]
    },
    "include": [
        "src"
    ]
}